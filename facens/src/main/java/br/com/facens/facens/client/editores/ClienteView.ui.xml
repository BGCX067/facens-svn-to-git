<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.lbl {
			width: 130px;
			font-weight: bold;
			text-align: right;
		}
		
		.lbl:AFTER {
			content: ":"
		}
		
		.txt {
			width: 480px;
		}
	</ui:style>
	<g:HTMLPanel>

		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
			<g:Label styleName="{style.lbl}">Código Cliente</g:Label>
			<g:TextBox ui:field="txtCodCliente" />
			<g:Button ui:field="btnConsultar">Consultar</g:Button>
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
			<g:Label styleName="{style.lbl}">Situação</g:Label>
			<g:TextBox styleName="{style.txt}" ui:field="txtSituacao" />
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
			<g:Label styleName="{style.lbl}">Nome</g:Label>
			<g:TextBox styleName="{style.txt}" ui:field="txtNome" />
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
			<g:Label styleName="{style.lbl}">Sobrenome</g:Label>
			<g:TextBox styleName="{style.txt}" ui:field="txtSobrenome" />
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
			<g:Label styleName="{style.lbl}">Logradouro</g:Label>
			<g:TextBox styleName="{style.txt}" ui:field="txtLogradouro" />
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
			<g:Label styleName="{style.lbl}">Cidade</g:Label>
			<g:TextBox ui:field="txtCidade" />

			<g:Label styleName="{style.lbl}">CEP</g:Label>
			<g:TextBox ui:field="txtCEP" />

			<g:Label styleName="{style.lbl}">UF</g:Label>
			<g:ListBox ui:field="lstUF" />
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
			<g:Label styleName="{style.lbl}">Telefone</g:Label>
			<g:TextBox styleName="{style.txt}" ui:field="txtTelefone" />
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
			<g:Label styleName="{style.lbl}">Email</g:Label>
			<g:TextBox styleName="{style.txt}" ui:field="txtEmail" />
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="5">
			<g:Button text="Salvar" ui:field="btnSalvar" />
			<g:Button text="Desativar" ui:field="desativar" />
			<g:Button text="Reativar" />
		</g:HorizontalPanel>

	</g:HTMLPanel>
</ui:UiBinder> 